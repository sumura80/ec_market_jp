<h2>会員情報修正<!--  <%= resource_name.to_s.humanize %> --></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
    <br>
    <div class="form-group">
    <%= f.label :ユーザーネーム %>
    <%= f.text_field :name, autofocus: true, autocomplete: "username" ,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email"  ,class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :新しいパスワード %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class: "form-control"  %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :新しいパスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :現在のパスワード%> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password"  ,class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "更新",class:"btn btn-primary"  %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p>お気に召しませんでしたか? <%= button_to "削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:"btn btn-danger"  %></p>

<%= link_to "一覧に戻る", :back %>


