<table class="table table-striped table-bordered table-hover">
  <tr>
    <th class="center">商品画像</th>
    <th class="center">商品名</th>
    <th class="center">商品の詳細</th>
    <th class="center">価格（円）</th>
    <th class="center">管理</th>
  </tr>
  <% @listings.each do |listing| %>
  <tr>
    <td><%= image_tag listing.image.url %></td>
    <td><%= listing.name %></td>
    <td><%= listing.description %></td>
    <td><%= listing.price %></td>
    <td>
      <!-- Single button -->
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">詳細<span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to "詳細を見る", listing,class: "btn btn-link" %></li>
          <li><%= link_to "修正する", edit_listing_path(listing), class:"btn btn-link" %></li>
          <li><%= link_to "削除する",listing_path(listing),method: :destroy, data: {confirm: "Are you sure?"}, class:"btn btn-link" %></li>
        </ul>
      </div>   
    </td>
   </tr>
  <% end %>
</table>


<% if user_signed_in? %>
  <%= link_to '商品を追加する', new_listing_path, class: "btn btn-success" %>
<% end %>



  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
         <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
         <script>
           $('.dropdown-toggle').dropdown()
         </script>
</header>