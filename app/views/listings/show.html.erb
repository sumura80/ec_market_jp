<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">    
			<%= image_tag @listing.image_url  %>
		</div>
	</div>
	<div class="col-md-6">
		  <h3><%= @listing.name %></h3>
		  <p><%= "#{@listing.price} 円" %></p>
		  <p><%= @listing.description %></p>
		  <div class="center" style="margin-top: 100px;">
		  <%= link_to "支払いページへ進む", new_listing_order_path(@listing), class: "btn btn-primary btn-lg" %>
		</div>
	</div>
</div>



<% if current_user == @listing.user  %>
	<%= link_to '編集', edit_listing_path(@listing) ,class:"btn btn-link" %> |
<% end %>
<%= link_to '一覧に戻る', listings_path ,class:"btn btn-link" %>


